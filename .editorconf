# editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Indentation override for all JS under lib directory
[*.html]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
